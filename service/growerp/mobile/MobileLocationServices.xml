                <set field="areaOut" from="[
                    accommodationAreaId: area.accommodationAreaId,
                    description: area.description,
                    image: imageFile? imageFile : '~/assets/images/addImage.png',
                    spots: itemsOut]"/>
                <script>areasAndSpots.add(areaOut)</script>
            </iterate>
        </actions>
    </service>



</services>